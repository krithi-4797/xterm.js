{
  "name": "xterm",
  "version": "1.1.2",
  "ignore": [
    "demo",
    "test",
    ".gitignore"
  ],
  "main": "lib/terminal.js",
  "repository": "https://github.com/sourcelair/xterm.js",
  "license": "MIT",
  "devDependencies": {
    "browserify": "^13.1.0",
    "chai": "3.5.0",
    "docdash": "0.4.0",
    "express": "4.13.4",
    "express-ws": "2.0.0-rc.1",
    "glob": "^7.0.5",
    "jsdoc": "3.4.0",
    "mocha": "2.5.3",
    "pty.js": "0.3.1",
    "sleep": "^3.0.1",
    "tsify": "^1.0.4",
    "typescript": "^1.8.10"
  },
  "scripts": {
    "build": "browserify lib/terminal.js -t [ babelify --no-compact --presets [ es2015 ] ] --standalone Terminal > src/xterm.js",
    "build:dist:addons:fit": "browserify addons/fit/index.js --standalone Terminal_Fit > src/addons/fit.js",
    "build:dist:addons:attach": "browserify addons/attach/index.js --standalone Terminal_Attach > src/addons/attach.js",
    "build:demo": "browserify demo/main.js > demo/_main.js",
    "start": "npm run build:demo && node demo/app",
    "test": "mocha -b --recursive",
    "build:docs": "jsdoc -c jsdoc.json"
  }
}
